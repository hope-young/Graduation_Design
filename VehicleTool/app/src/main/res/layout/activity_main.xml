<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e9fd"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hello_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:text="欢迎使用！"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        tools:ignore="RtlCompat" />

    <com.heweather.plugin.view.HorizonView
        android:id="@+id/weather_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/hello_text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp" />


    <Button
        android:id="@+id/button_map"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_below="@id/weather_view"
        android:layout_toLeftOf="@id/button_record"
        android:background="@drawable/rad_selector"
        android:text="地图"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_record"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_below="@id/weather_view"
        android:background="@drawable/rad_selector"
        android:text="录音"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_camera"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_below="@id/weather_view"
        android:layout_toRightOf="@id/button_record"
        android:layout_centerVertical="true"
        android:background="@drawable/rad_selector"
        android:text="录像"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_time"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/button_map"
        android:layout_toLeftOf="@id/button_navi"
        android:layout_centerVertical="true"
        android:background="@drawable/rad_selector"
        android:text="紧急报警"
        android:textAlignment="center"
        android:textSize="16sp" />


    <Button
        android:id="@+id/button_navi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button_record"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rad_selector"
        android:text="导航"
        android:textAlignment="center"
        android:textSize="20sp" />



    <Button
        android:id="@+id/button_etc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_below="@id/button_camera"
        android:layout_toRightOf="@id/button_navi"
        android:layout_centerVertical="true"
        android:background="@drawable/rad_selector"
        android:text="敬请期待"
        android:textAlignment="center"
        android:textSize="16sp" />


</RelativeLayout>